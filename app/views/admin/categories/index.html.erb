<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <h2>There are <%= @count %> Categories Currently</h2>
  <h5 style="bold"><b>Add New Category?</b></h5>
   <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>
  <div class="panel panel-default products">
    <table class="table table-bordered">
        <thead>
        <tr>
          <th>Category</th>
          <th>Number of Products</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>
</section>
